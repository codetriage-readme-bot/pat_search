<div class='text-center titles-with-yellow'>
  <h1>Search</h1>
</div>
<div class='container'>
  <div class='text-center search-bar'>
    <%= form_tag search_path, method: :get  do %>
      <div class="inner-addon right-addon">
        <i class="glyphicon glyphicon-search"></i>
        <%= text_field_tag :id, params[:id], class: 'form-control' %>
      </div>
    <% end %>
  </div>
</div>

<div>
<% for k in 0...@counter %>
  <% @invention = @searchCount[k]["invention"]["value"] %>
  <% if params[:id] == @invention %>
    <table>
      <tr>
        Filing Date: <td><%= @searchCount[k]["fDate"]["value"] %></td>
      </tr>
      <tr>
        Lodged Date: <td><%= @searchCount[k]["lDate"]["value"] %></td>
      </tr>
      <tr>
        Address: <td><%= @searchCount[k]["address"]["value"]%></td>
      </tr>
      <tr>
        Organization: <td><%= @searchCount[k]["organization"]["value"] %></td>
      </tr>
      <tr>
        Postcode: <td><%= @searchCount[k]["postcode"]["value"] %></td>
      </tr>
      </table>
  <% end %>
<% end %>
</div>